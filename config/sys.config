%% Thanks to Ulf Wiger at Ericcson for these comments:
%%
%% This file is identified via the erl command line option -config File.
%% Note that File should have no extension, e.g.
%% erl -config .../sys (if this file is called sys.config)
%%
%% In this file, you can redefine application environment variables.
%% This way, you don't have to modify the .app files of e.g. OTP applications.

[
  %% SASL config
  {sasl, [
    {sasl_error_logger, {file, "/Users/xuchaoqian/codebase/hongjia/maxwell_store/log/sasl-error.log"}},
    {errlog_type, error},
    {error_logger_mf_dir, "/Users/xuchaoqian/codebase/hongjia/maxwell_store/log/sasl"},      % Log directory
    {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
    {error_logger_mf_maxfiles, 5}           % 5 files max
  ]},

  %% Lager config
  {lager, [
    {colored, true},
    {handlers, [
      {lager_console_backend, [
        {level, debug},
        {formatter, lager_default_formatter},
        {formatter_config, ["[", severity, "] ", date, " ", time, " ", pid, " [", module, ":", line, "] ", message, "\n"]}
      ]},

      {lager_file_backend, [
        {file, "/Users/xuchaoqian/codebase/hongjia/maxwell_store/log/info.log"},
        {size, 10485760},
        {date, "$D0"},
        {count, 40},
        {level, debug},
        {formatter, lager_default_formatter},
        {formatter_config, ["[", severity, "] ", date, " ", time, " ", pid, " [", module, ":", line, "] ", message, "\n"]}
      ]},

      {lager_file_backend, [
        {file, "/Users/xuchaoqian/codebase/hongjia/maxwell_store/log/error.log"},
        {size, 10485760},
        {date, "$D0"},
        {count, 40},
        {level, error},
        {formatter, lager_default_formatter},
        {formatter_config, ["[", severity, "] ", date, " ", time, " ", pid, " [", module, ":", line, "] ", message, "\n"]}
      ]}
    ]}
  ]},

  %% maxwell_store configure
  {maxwell_store, [
    {data_dir, "/Users/xuchaoqian/codebase/hongjia/maxwell_store/data/"},
    {retention_age, 300},
    {clean_interval, 1}
  ]}
].